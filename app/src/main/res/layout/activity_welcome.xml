<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- כותרת: שאלות על עצמך -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Questions about yourself"
            android:textSize="18sp"
            android:paddingBottom="16dp" />

        <!-- שדות שאלות על עצמך -->
        <EditText
            android:id="@+id/input_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Name" />

        <EditText
            android:id="@+id/input_age"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Age"
            android:inputType="number" />

        <EditText
            android:id="@+id/input_birthdate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Birthdate"
            android:focusable="false"
            android:clickable="true" />

        <EditText
            android:id="@+id/input_hobby"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Hobby" />

        <Spinner
            android:id="@+id/spinner_gender"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <Spinner
            android:id="@+id/spinner_sexual_preference"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <Spinner
            android:id="@+id/spinner_status"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <EditText
            android:id="@+id/input_about_yourself"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Tell us about yourself" />

        <!-- כותרת: שאלות על הפרטנר שאתה מחפש -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Questions about the partner you are looking for"
            android:textSize="18sp"
            android:paddingTop="32dp"
            android:paddingBottom="16dp" />

        <!-- שדות שאלות על הפרטנר שאתה מחפש -->
        <EditText
            android:id="@+id/input_partner_age_range"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Preferred Partner Age Range" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Partner Location Range"
            android:paddingTop="16dp" />

        <SeekBar
            android:id="@+id/seekBar_partner_location_range"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:max="100" />

        <TextView
            android:id="@+id/txt_partner_location_range_value"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0 km"
            android:paddingTop="8dp" />

        <Spinner
            android:id="@+id/spinner_partner_gender"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <Spinner
            android:id="@+id/spinner_looking_for"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <!-- כפתור שמירה -->
        <Button
            android:id="@+id/btn_save"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Save"
            android:layout_marginTop="24dp" />

    </LinearLayout>
</ScrollView>
